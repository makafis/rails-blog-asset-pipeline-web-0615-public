<div class="jumbotron">
<h2 ><%= link_to post.name, post %></h2> <span>written by: <%= post.user.name %> </span>

<% if !user_signed_in? %>
  <p> <%= link_to "Log in to Edit or Delete your Post", login_path %> </p>
<% else %>
  <p><%= link_to 'Edit', edit_post_path(post),  :class => "btn btn-primary" %></p>
  <p><%= link_to 'Destroy', post, method: :delete,  :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></p>
<% end %>
</div>